<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="261dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_hint_bg"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/dialog_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_orange"
            android:textSize="@dimen/text_size"
            android:text="温馨提示"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/dialog_image_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_prompt_2x" />

            <TextView
                android:id="@+id/dialog_text_hint_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size"
                android:text="优惠券不可使用原因"
                android:layout_marginTop="22dp"/>

            <TextView
                android:id="@+id/dialog_text_hint_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/text_size_0"
                android:text="优惠券被锁定"
                android:layout_marginTop="7dp"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/line_gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center">
        <TextView
            android:id="@+id/dialog_text_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/text_color_orange"
            android:textSize="@dimen/text_size"
            android:text="否"
            android:gravity="center"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/dialog_text_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/text_color_orange"
            android:textSize="@dimen/text_size"
            android:text="确定"
            android:gravity="center"/>
       
    </LinearLayout>
</LinearLayout>